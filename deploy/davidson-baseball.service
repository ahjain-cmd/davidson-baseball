[Unit]
Description=Davidson Baseball Streamlit (Docker Compose)
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/davidson_baseball
ExecStart=/usr/bin/docker compose --env-file /opt/davidson_baseball/.env up -d --build
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
